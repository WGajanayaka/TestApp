            </table>
    
            <table class="details_container_table">
                <tbody>
                    <tr>
                        <td style="width: 20%; text-align: right;"></td>
                        <td style="width: 30%;"></td>
                        <td style="width: 20%;"></td>
                        <td style="width: 30%; text-align: right">
                            <input type="submit" value="Save" class="blue-btn" /></td>
                    </tr>

                </tbody>
            </table>   
      
   
        }


    </div>
</div>
