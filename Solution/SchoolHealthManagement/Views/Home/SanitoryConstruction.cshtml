                        </tr>
                    }
                </tbody>
            </table>
     
    
    
    
            <table id="Constructions" class="datatable sortable" cellpadding="0" style="width: 100%">
                <thead>
                    <tr>


                        <th>
                            @Html.DisplayName("Construction ID")
                        </th>
                        <th>
                            @Html.DisplayName("Agreement Date")
                        </th>
                        <th>
                            @Html.DisplayName("Started Date")
                        </th>
