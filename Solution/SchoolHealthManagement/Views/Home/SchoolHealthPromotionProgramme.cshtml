         var NutritionKnowledgeCompetence = @(Model.NutritionKnowledgeCompetence);
         var StudentFitnessStatus = @(Model.StudentFitnessStatus);
         var PysicalWellbeingProg = @(Model.PysicalWellbeingProg);
         var IndividualFitness = @(Model.IndividualFitness);
         var MaintananceOfCanteens = @(Model.MaintananceOfCanteens);
         var MentalEnvironment = @(Model.MentalEnvironment);
         var InstructionsNGuidence = @(Model.InstructionsNGuidence);

         var TotalMarks = 0;
         $("#Label1").text(SchoolHelthCommitee-1);
         $("#Label2").text(StudentHealthSocity-1);
         $("#Label3").text(FirstAidFacility-1);
         $("#Label4").text(MedicalTest-1);
         $("#Label5").text(Reactions4IssuesOfMedicalTest-1);
         $("#Label6").text(ContribOnSchHealthPrg-1);
         $("#Label7").text(PublicHealthPrg-1);
         $("#Label8").text(SupplySanitoryFacilities-1);
         $("#Label9").text(CleanlinessOfSanitoryFacilities-1);
         $("#Label10").text(WaterSupply-1);
         $("#Label11").text(StudentsAttendance-1);
         $("#Label12").text(TeachersAttendance-1);
         $("#Label13").text(ClassroomEnvironment-1);
         $("#Label14").text(EnvironmentOfSchool);
         $("#Label15").text(MinimizeNutritionProblems-1);
         $("#Label16").text(NutritionKnowledgeCompetence-1);
         $("#Label17").text(StudentFitnessStatus-1);
         $("#Label18").text(PysicalWellbeingProg-1);
         $("#Label19").text(IndividualFitness-1);
         $("#Label20").text(MaintananceOfCanteens-1);
         $("#Label21").text(MentalEnvironment-1);
         $("#Label22").text(InstructionsNGuidence);

         TotalMarks = SchoolHelthCommitee + StudentHealthSocity  + FirstAidFacility  + MedicalTest  + Reactions4IssuesOfMedicalTest +
              ContribOnSchHealthPrg + PublicHealthPrg  + SupplySanitoryFacilities  + CleanlinessOfSanitoryFacilities  + WaterSupply +
              StudentsAttendance + TeachersAttendance  + ClassroomEnvironment  + EnvironmentOfSchool  + MinimizeNutritionProblems +
              NutritionKnowledgeCompetence  + StudentFitnessStatus  + PysicalWellbeingProg  + IndividualFitness  + MaintananceOfCanteens  +
              MentalEnvironment  + InstructionsNGuidence - 20 ;
         $("#Total").text("Total : " + TotalMarks);
     }
     window.onload = codeAddress;

     function CtrlChanged(_ValueSel, _LabelFor) {
         //alert(_ValueSel);
         //alert(_LabelFor);
         $("#" + _LabelFor).text(_ValueSel - 1);

         var TotalMarks = 0;
         for(i=1;i<23;i++)
         {
             var valLbl = $("#Label" + i).text();
             //alert(valLbl);
             TotalMarks = Number(TotalMarks) + Number(valLbl);
             //alert(TotalMarks);
         }

         $("#Total").text("Total : " + TotalMarks);

     }

</script>


