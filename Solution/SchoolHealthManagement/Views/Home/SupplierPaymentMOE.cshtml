       @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)


        <table class="details_container_table" style="width: 50%">
            <tbody>
                <tr>
                    <td style="width: 20%; text-align: right">
                        @Html.Label("Payment No")
                    </td>
                    <td style="width: 30%">
                        @Html.TextBoxFor(model => model.PaymentNo, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.PaymentNo)
                    </td>
                </tr>
                <tr>
                    <td style="width: 20%; text-align: right">@Html.Label("Payment Date") </td>
                    <td style="width: 30%">
                        @Html.EditorFor(model => model.PaymentDate, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.PaymentDate)
                    </td>
                </tr>
                <tr>
                    <td style="width: 20%; text-align: right">@Html.Label("Year")</td>
                    <td style="width: 30%">
                        @Html.DropDownList("Year")
                        @Html.ValidationMessageFor(model => model.Year)
                    </td>
                </tr>
                <tr>
                    <td style="width: 20%; text-align: right">@Html.Label("Month")  </td>
                    <td style="width: 30%">
                        @Html.DropDownList("Month", "Select Month")
                        @Html.ValidationMessageFor(model => model.Month)
                    </td>
                </tr>

            </tbody>
        </table>
     <h3>Provincial Requisitions for the Month</h3><p>Provincial forwarded requests for the selected month will be listed in this table.</p>
    <table class="datatable sortable" id="SuppyerTable" style="width: 100%; padding-top: 6px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Province")
                </th>
                <th>
                    @Html.DisplayName("Year")
                </th>
                <th>
                    @Html.DisplayName("Month")
                </th>
                <th>
                    @Html.DisplayName("Total Amount")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PaymentSummary)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td style="width: 30%; text-align: right">
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>

                </tr>
            }
            
        </tbody>
    </table>
    <table class="" style="width: 100%; ">
        <tbody>

            <tr>
                <td style="width: 70%; text-align: right" colspan="3">@Html.Label("Grand Total") </td>
                <td style="width: 30%; text-align: right">
                    <p id="pstot">@Model.PaymentSummaryTot</p>
                </td>
            </tr>
        </tbody>
    </table>

               <h3>Payment Summary</h3><p>Saved records will be loaded to this table.</p>
        <table class="datatable sortable" style="width: 100%; padding-top: 6px;">
