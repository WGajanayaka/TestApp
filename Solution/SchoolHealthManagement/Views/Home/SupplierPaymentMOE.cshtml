                    <th>
                        @Html.DisplayName("Province")
                    </th>
                    <th>
                        @Html.DisplayName("Zone")
                    </th>
                    <th>
                        @Html.DisplayName("CensorsID")
                    </th>
                    <th>
                        @Html.DisplayName("SupplierNme")
                    </th>
                    <th>
                        @Html.DisplayName("AccountNo")
                    </th>
                    <th>
                        @Html.DisplayName("Bank")
                    </th>
                    <th>
                        @Html.DisplayName("Branch")
                    </th>
                    <th>
                        @Html.DisplayName("Amount")
                    </th>
                    <th>
                        @Html.DisplayName("PAY")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<SchoolHealthManagement.Models.SupplierPaymentMOE>)ViewBag.SupplierPaymentRequestList)
                {
                    <tr>
                        <td>
                           @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestDate)
                        </td>
                        <td>
