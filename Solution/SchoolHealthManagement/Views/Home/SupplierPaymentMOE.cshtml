                        @Html.DisplayName("Cheque No")
                    </th>
                    <th>
                        @Html.DisplayName("Cheque Date")
                    </th>
                    <th>
                        @Html.DisplayName("Total Amount")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<SchoolHealthManagement.Models.SupplierPaymentMOE>)ViewBag.SupplierPaymentRequestList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Month)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChequeNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChequeDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
           
        <h3>Payments</h3>
        <table class="details_container_table" style="width: 50%">
            <tbody>
                <tr>
                    <td style="width: 20%; text-align: right">
                        @Html.Label("Bank")
                    </td>
                    <td style="width: 30%">
                        @Html.DropDownList("Banks")
                        @Html.ValidationMessageFor(model => model.BankName)
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="datatable sortable" style="width: 100%; padding-top: 6px;">
